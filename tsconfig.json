{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "jsx": "react-jsx",
        "moduleResolution": "bundler",
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "types": [
            "react",
            "react-dom"
        ]
    },
    "include": [
        "src"
    ]
}